// If expressions
fun if_exp(a,b){
   val x = (if a then 0 else 0)+(if b then 1 else 1);
}

// If statements inside expressions
fun if_stmt_in_exp(a){
   val y = {| val x; if(a) x={| return 0; |}; else x=1; return x; |};
}

// Case 1: both branches return
fun return_both(a){
   if(a)
      return 1;
   else
      return 2;
}

// Case 2: true branch returns
fun return_then(a){
   if(a)
      return 1;
   else
      val x = 0;
}

// Case 3: false branch returns
fun return_else(a){
   if(a)
      val x = 0;
   else
      return 1;
}

// Case 4: nested if statements
fun if_nested(a,b,c){
   if(a)
      if(b)
         return 1;
      else
         return 2;
   else
      if(c)
         return 3;
      else
         return 4;
}

#include "monoin.h"

_ctx_type_0 Monoin__ctx_type_0_init(){
   _ctx_type_0 _ctx;
   _ctx.pre = 0;
   int_init_array(_ctx.notes,4,0);
   _ctx.count = 0;
   return _ctx;
}

_ctx_type_0 Monoin_mono_noteOn_init(){ return Monoin__ctx_type_0_init();}

int Monoin_mono_noteOn(_ctx_type_0 &_ctx, int n){
   if(_ctx.count < 4){
      int_set(_ctx.notes,_ctx.count,n);
      _ctx.pre = n;
      if(_ctx.count < 4){
         _ctx.count = (_ctx.count + 1);
      }
   }
   return _ctx.pre;
}

_ctx_type_0 Monoin_mono_noteOff_init(){ return Monoin__ctx_type_0_init();}

int Monoin_mono_noteOff(_ctx_type_0 &_ctx, int n){
   uint8_t found = 0;
   int pos;
   int i = 0;
   if(_ctx.count == 0){
      return _ctx.pre;
   }
   while((i < 4)){
      if((int_get(_ctx.notes,i) == n) && (! found)){
         pos = i;
         found = 1;
      }
      i = (i + 1);
   }
   if(found){
      int k = (pos + 1);
      while((k < 4)){
         int_set(_ctx.notes,(k + (-1)),int_get(_ctx.notes,k));
         k = (k + 1);
      }
      if(found && (_ctx.count > 0)){
         _ctx.count = (_ctx.count + (-1));
         _ctx.pre = int_get(_ctx.notes,(_ctx.count + (-1)));
      }
   }
   return _ctx.pre;
}

_ctx_type_0 Monoin_mono_isGateOn_init(){ return Monoin__ctx_type_0_init();}

uint8_t Monoin_mono_isGateOn(_ctx_type_0 &_ctx){
   return (_ctx.count > 0);
}


